<div class="form" id="fitnessForm">
    <h2 id="form-title">Log a workout</h2>
    <div class="form-area">
        <input type="text" class="form-input" id="activityName" placeholder="Workout Name" required>
    </div>
    <div class="dur-date">
        <div class="dur-date-area">
            <input type="number" class="form-input" id="duration" min="1" placeholder="Duration (min)" required>
        </div>
        <div class="dur-date-area">
            <input type="date" class="form-input" id="date" required>
        </div>
    </div>
    <button type="submit" id="fitButton" class="form-btn">Submit</button>
</div>

<script src="/js/fitness.js"></script>